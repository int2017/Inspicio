@model Inspicio.Models.ReviewViewModels.CreatePageModel

<script type="text/javascript" src="https://cdn.rawgit.com/showdownjs/showdown/1.7.1/dist/showdown.min.js"></script>
<script type="text/javascript" src="~/js/markdownConverter.js"></script>
<style>
    .btn {
        min-width: 120px;
        padding: 6px;
        font-size: 1.3em;
    }
    input[type='text'], textarea.form-control {
        border-radius: 2px;
        border: none;
        border-bottom: 2px solid #9d9d9d;
        -webkit-transition: all 0.2s linear;
        -moz-transition: all 0.2s linear;
        -o-transition: all 0.2s linear;
        transition: all 0.2s linear;
    }
        input[type='text']:focus, textarea.form-control:focus {
            background-color: rgba(0, 0, 0, 0.1);
            -webkit-transition: all 0.2s linear;
            -moz-transition: all 0.2s linear;
            -o-transition: all 0.2s linear;
            transition: all 0.2s linear;
            outline: none;
            border-color: #437888;
            box-shadow: none;
        }
</style>
<h3> New Review </h3>


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div  id="project-info">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">

                    <input type="text" id="project-title" class="form-control" placeholder="Project Title">
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">

                    <textarea class="form-control" id="project-description" rows="4" placeholder="Project Description &lt;markdown supported&gt;"></textarea>
                    <span class="text-danger"></span>

                    <textarea id="Image_DescriptionHTML"></textarea>
                </div>
            </div>
            <div class="col-md-6">
               <div id="projectThumbDropzoneDiv">
                    <div class="dropzone needsclick dz-clickable" id="uploaderThumb">
                        <div class="dz-message needsclick">
                            <i class="fa fa-file-image-o fa-5x" aria-hidden="true"></i>
                            <h4>Drag and drop your thumbnail here or click to upload</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <button type="button" id="create-screens" class="btn btn-info">Next</button>
        </div>
    </div>
    <div class="image-upload-container">
        <div class="form-group">
            <!-- Review Title -->
            <input  type="text" id="Image_Title" class="form-control" placeholder="Screen Title">
        
        <span class="text-danger"></span>
        </div>

        <div class="form-group">
            <!-- Review Description -->
            <textarea class="form-control" id="Image_Description_UserInput" rows="4" placeholder="Screen Description &lt;markdown supported&gt;"></textarea>
            <span  class="text-danger"></span>
        <span class="text-danger"></span>

        <textarea id="Image_DescriptionHTML"></textarea>
        </div>



        <div class="form-group">

            <!--input below will be used to temp store the base64 encoding of the image-->
            <input id="b64uploaderThumb" type="hidden" />

            <!-- Dropzone Image Upload-->
            <div id="dropzoneDiv">
                <div class="dropzone needsclick dz-clickable" id="uploader">
                    <div class="dz-message needsclick">
                        <i class="fa fa-upload fa-5x" aria-hidden="true"></i>
                       <h4 >Drag and drop your screens here or click to upload</h4> 
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-success" id="edit-img">Save changes</button>
        </div>
        <div id="thumbnail-container" class="row-eq-height">
            <div class="col-xs-4 col-md-2" id="add-img">
                <div class="col-xs-12 col-md-12 thumbnail-inner">
                    <i class="fa fa-plus fa-5x" aria-hidden="true"></i>
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <!-- Submit Button -->
            <button type="button" id="create-reviewer" class="btn btn-success">Next</button>
        </div>
    </div>
    <div class="row-eq-height add-reviewers-overlay">
   
            <div class="col-md-offset-3 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4>Your review</h4></div>
                    <div class="reviewer-content">
                    <div class="panel-body">
                        <h3>Overview</h3>
                       
                        <div class="row-eq-height">
                            <div class="col-md-2">
                                Title: 
                            </div>
                        </div>
                        <div class="row-eq-height">
                            <div class="col-md-2">
                                Description:
                            </div>
                        </div>
                        <div class="row-eq-height">
                            <div class="col-md-2">
                                Screens:
                                
                            </div>
                            <div class="col-md-10">
                                <div class="row-eq-height" id="review-thumbnail-container">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body add-reviewers">
                        <h3>Add reviewers</h3>
                        <input id="filter_reviewees_id" name="filter_reviewees" onkeyup="filterUsers()" type="text" placeholder="&#xf002; " />
@{
    if (Model.Reviewers.Count > 0)
    {
                        @for (var i = 0; i < Model.Reviewers.Count; i++)
                        {
                            <div class="row-eq-height reviewer-info">
                                <div class="col-md-1 text-center">
                                    <input type="checkbox"  />
                                </div>
                                <div id="profilename-@i" class="col-md-6 text-left">
                                    <label > @Model.Reviewers[i].ProfileName</label>
                                </div>
                                <div id="email-@i" class="col-md-5">
                                    <label > @Model.Reviewers[i].Email</label><input type="hidden" asp-for="@Model.Reviewers[i].Id" />
                                </div>

                            </div>
                        }
    }
}
                    </div>
                    </div>
                    <div class="panel-footer">
        <input id="b64uploader" type="hidden" />
                            <!-- Submit Button -->
                            <button type="button" id="submit-images" class="btn btn-success">Create Review</button>
                        </div>
                    </div>
                </div>
            </div>
           
            
        
      
    






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript" src="~/js/createDropzone.js"></script>

<script>
   
    function filterUsers() {
        // Declare variables
        var input, filter, ul, li, a, i;
        input = document.getElementById('filter_reviewees_id');
        filter = input.value.toLowerCase();
        // Loop through all list items, and hide those who don't match the search query
        $(".reviewer-info").each(function () {
            if ($(this).find("label").html().toLowerCase().indexOf(filter) < 0) {
                $(this).hide();
            }
            else $(this).show();
        })
    }

    $('#Image_Description_UserInput').on('blur', function (e) {

        $("#Image_DescriptionHTML").html(convertToHTML($("#Image_Description_UserInput").val()));
    });

</script>
<script type="text/javascript" src="~/js/multipleImages.js"></script>
<style>

    ul {
        margin: 0;
        list-style: none;
        float: left;
    }

    #Image_DescriptionHTML{
        display:none;
    }
</style>