
@model Inspicio.Models.AccountViewModels.LogRegModel

<script type="text/javascript" src="~/js/login_register.js"></script>

<!-- ▼▼ Log On Form ▼▼ -->
<form id="loginformmain" asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">  
    <h4 style="text-align:center">Welcome Back!</h4>
    <div  align="center" class="log-form form-group">
        <div class="col-md-8 col-md-offset-2">
            <input asp-for="Login.Email" class="form-control" placeholder="Email Address*" />
            <span asp-validation-for="Login.Email" class="text-danger" style="color: black;"></span>
        </div>
    </div>
    <div  class="log-form form-group" align="center" >
        <div class="col-md-8 col-md-offset-2">
            <input asp-for="Login.Password" class="form-control" placeholder="Password* "/>
            <span asp-validation-for="Login.Password" class="text-danger" style="color: black;"></span>
        </div>
    </div>
    <div align="center" class="form-group">
        <div class="col-md-offset-0 col-md-10">
            <div class="checkbox">
                <label asp-for="Login.RememberMe" style="font-size: 14px; color: black;">
                    <input asp-for="Login.RememberMe" />
                    @Html.DisplayNameFor(m => m.Login.RememberMe)
                </label>
            </div>
        </div>
    </div>
    <div align="center" class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <button type="submit" class="btn btn-default" id="login-btn"> LOG IN </button>
        </div>
    </div> 
    <p align="center">
        <a asp-action="ForgotPassword" style ="font-size: 14px; color: black;">Forgot your password?</a>
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}